 @{
 
 ViewData["Title"]="Send";
}

@model BookExchange.ViewModels.AddReplyViewModel


<div>
    <p>
        Send a reply to this message
    </p>
</div>

<form asp-action="AddReply" asp-route-id="@Model.Conversation.ConversationId" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
      @Model.Conversation.Subject    
    </div>
    <div class="form-group">
        <label asp-for="Message.MessageText">Message:</label>
        <div><span asp-validation-for="Message.MessageText"></span></div>
        <textarea class="form-control col-6" asp-for="Message.MessageText"></textarea><br />
    </div>
    <div class="form-group">
        <button class="btn btn-default" type="submit">Send Reply</button>
    </div>
</form>

